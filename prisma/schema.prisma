// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

//Author Schema
model Author {
  id    Int     @default(autoincrement()) @id
  email String?  @unique
  firstName  String?
  lastName  String?
  books Book[]
}

//Books Schema
model Book {
  id    Int     @default(autoincrement()) @id
  title String  @unique
  firstName  String?
  lastName  String?
  author Author? @relation(fields: [authorId], references: [id])
  authorId Int? 
  genre String?
  outOfPrint Boolean
  publisher String?
  publishDate String?
  imageUrl String?
}